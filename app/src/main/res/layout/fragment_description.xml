<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.DescriptionFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.NeedFood_R">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            android:id="@+id/collapsing_toolbar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/back_image" />

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="149dp"
                />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/description_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:translationZ="1dp"
                app:menu="@menu/menu_description"
                app:navigationIcon="@drawable/ic_back"
                app:layout_collapseMode="pin"/>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <TextView-->
<!--                android:id="@+id/product_name"-->
<!--                android:layout_marginHorizontal="25sp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                android:text="Beef Burger"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="32sp" />-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginHorizontal="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/product_price"
                    android:text="IDR"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="20K"
                    android:textColor="@color/black"
                    android:textSize="32sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/product_location"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mcdi"
                android:textSize="18sp"
                android:drawablePadding="17dp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_location" />

            <TextView
                android:layout_marginStart="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4,7"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:drawablePadding="17dp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="25dp"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese burger dengan daging dan keju mozarella, hanya burger saja tidak dapat bungkus BTS.
 jika ingin menambah minum atau menu lain jangan lupa konfirmasi terlebih dahulu"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/grey"
                android:lineHeight="27dp"
                android:layout_marginHorizontal="25dp"/>

            <FrameLayout
                android:layout_marginTop="72dp"
                android:layout_marginHorizontal="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:backgroundTint="#01E2FF"
                    app:cornerRadius="16dp"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_message"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_to_order"
                    android:backgroundTint="#01E2FF"
                    app:cornerRadius="16dp"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Buyurtma qilish"/>
            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


