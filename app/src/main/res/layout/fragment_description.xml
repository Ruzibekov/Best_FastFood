<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.DescriptionFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/description_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:translationZ="1dp"
            app:menu="@menu/menu_description"
            app:navigationIcon="@drawable/ic_back" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/back_image" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="149dp"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_marginHorizontal="25sp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Beef Burger"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="20K"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/product_price"
            android:text="IDR"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/product_location"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mcdi"
        android:textSize="18sp"
        android:drawablePadding="17dp"
        android:textColor="@color/grey"
        app:drawableStartCompat="@drawable/ic_location" />

    <TextView
        android:layout_marginStart="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4,7"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:drawablePadding="17dp"
        android:textColor="@color/grey"
        app:drawableStartCompat="@drawable/ic_star" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="25dp"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheese burger dengan daging dan keju mozarella, hanya burger saja tidak dapat bungkus BTS.
 jika ingin menambah minum atau menu lain jangan lupa konfirmasi terlebih dahulu"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/grey"
        android:lineHeight="27dp"
        android:layout_marginHorizontal="25dp"/>
    
    <FrameLayout
        android:layout_marginTop="72dp"
        android:layout_marginHorizontal="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="146dp"
            android:layout_height="57dp"
            android:text="Chat"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_gravity="end"
            android:text="Beli langsung"/>
    </FrameLayout>
</LinearLayout>